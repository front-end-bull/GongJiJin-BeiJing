    section.contact>.buttons{
        float: left;
        width: 100%;
        /*margin-top: 13px;*/
        background-color: #ff9402;
        /*color: black;*/
    }
    section.contact>.buttons>a{
        color: black;
        line-height: 45px;
        /*font-size: 15px;*/
        font-weight: 900;
    }

    section.contact>.buttons>a>.phone{
        width: 100%;
        text-align: center;
        /*text-decoration: underline;*/
    }

    section.contact>.buttons>a>.phone>img{
        width: 22px;
        margin-right: 10px;
        vertical-align: middle;
    }

    section.contact>.buttons>a>.phone>span{
        border-bottom: 2px solid black;
    }
    
    @media(max-width: 320px){
        section.contact>.left>img{
            transform:scale(0.9);
        }
        section.contact>.right{
            transform:scale(0.9);
        }
        section.contact>.buttons{
            margin-top: 0;

        }
        section.contact>.buttons>a{
            line-height: 35px;
        }
        section.contact>.buttons>a>.phone{
            transform:scale(0.9);
        }
    }
