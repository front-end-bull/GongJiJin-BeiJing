<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>详细页面</title>
	<meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
	<link rel="stylesheet" href="/static/css/weui.min.css"/>
	<style>
		html{
			font-size: 100px;
		}
		 @media screen and (max-device-width:320px){
            html{
                font-size: 85.3px;
            }
        }

        @media screen and (min-device-width:414px){
            html{
                font-size: 100px;
            }
        }
		body{
			font-size: 0.16rem;
			/*background-color: #eeeeee;*/
		}
		*{	
			padding: 0;
			margin: 0;
			line-height: 1;
			box-sizing:border-box;
		}

		.clearfix 
		{ 
	      	zoom: 1; 
	    } 
	    .clearfix:before, .clearfix:after 
	    { 
	      	display: table; 
	      	line-height: 0; 
	      	content: ""; 
	    } 
	    .clearfix:after 
	    { 
	      	clear: both; 
	    } 

	    .number{
	    	font-size: 0.14rem;
	    	line-height: 0.45rem;
	    	padding-left: 0.16rem;
	    	/*background-color: #eeeeee;*/
	    }

	    .year{
	    	padding-left: 0.22rem;
			color: white;
	    	background-color: #3ea3fe;
	    	line-height: 0.45rem;
	    	position: relative;
	    }

	    .triangle{
	    	/*background-color: white;
	    	width: 0.18rem;
	    	height: 0.18rem;
	    	position: absolute;
	    	left: 0.29rem;
	    	transform:rotate(45deg);
	    	-ms-transform:rotate(45deg);
	    	-moz-transform:rotate(45deg);
	    	top: 0.36rem;*/
	
			position: absolute;
	    	left: 0.2rem;
	    	top: 0.34rem;
	    }
		

		table{
			width: 100%;
			border-bottom: 1px solid #f5f5f9;
			/*border:solid #e6e6e6; border-width:1px 0px 0px 1px;*/
		}

	    th,td{
	    	width: 25%;
	    	line-height: 0.4rem;
	    	text-align: center;
	    	border: 0;
	    	/*border:solid #e6e6e6; border-width:0px 1px 1px 0px; */
	    }
		
		td:nth-child(3){
			color:#ff8f2e;
		}
		
		td:nth-child(4){
			color: #2bd394;
		}

	    tbody tr:nth-child(odd){
	    	background-color: #f5f5f9;
	    }
	</style>
</head>
<body>
	<div class="number"><%=name%>&nbsp;客户号:<%=number%></div>

	<% _.each(content, function(c) { %>
			<div class="year"><%=c.year%><img class="triangle" src="/static/images/sanjiaoxing.png"></div></div>

			<table border="0">
				<thead>
					<tr>
						<th>日期</th>
						<th>项目</th>
						<th>发生金额</th>
						<th>账户余额</th>
					</tr>
				</thead>
				<tbody>
				<% _.each(c.rows, function(r) { %>
					<tr>
						<td><%=r.moon_day%></td>
						<td><%=r.project%></td>
						<td><%=r.increase%></td>
						<td><%=r.total%></td>
					</tr>
				<% }); %> 
				</tbody>
			</table>	

			
	<% }); %> 
	



	
	
</body>
</html>